<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.64</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ToolbarAccentNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutBordered" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="android:background">@drawable/text_input_layout_border_selector</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/text_input_edit_text_cursor</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextInputHintStyle">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BottomSheetTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
</resources>